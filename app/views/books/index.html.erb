<h1>Listing Books</h1>

<table>
  <thead>
  <tr>
    <th>Title  </th>
    <th>Description  </th>
    <th>More Info  </th>
    <th>Update</th>
    <th colspan="9"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.description %></td>
      <td><%= link_to "Show", controller: "books", action: "show", id: book %></td>
      <td><%= link_to "Edit", controller: "books", action: "update",  id: book  %></td>
      <td><%= link_to "Destroy", controller: "books", action: "destroy", id: book%></td>
    </tr>
  <% end %>
  </tbody>
</table>

